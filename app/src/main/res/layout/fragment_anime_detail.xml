<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdetails"
    tools:context=".ui.detailsscreen.AnimeDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <ProgressBar
            android:id="@+id/anime_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/anime_image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/anime_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_image_view"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/mypink"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Anime Title" />

        <TextView
            android:id="@+id/anime_start_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_title_text_view"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/mypink"
            android:visibility="gone"
            tools:text="Anime start date" />

        <Button
            android:id="@+id/add_anime_to_fav_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_start_date_text_view"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:text="Add to Favourites"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>