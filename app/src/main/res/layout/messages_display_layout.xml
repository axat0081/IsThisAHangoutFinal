<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:textColor="@color/myblack"
            android:textStyle="bold"
            tools:text="Username" />

        <TextView
            android:id="@+id/message_received_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="130dp"
            android:background="@drawable/messages_background"
            android:padding="20dp"
            android:textColor="@color/myblack"
            tools:text="Hello There" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sent_by_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:textColor="@color/myblack"
                android:textStyle="bold"
                tools:text="Username" />

            <TextView
                android:id="@+id/message_sent_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sent_by_text_view"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/messages_background"
                android:backgroundTint="@color/mypink"
                android:padding="20dp"
                android:textColor="@color/myblack"
                tools:text="Hello There" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>